<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Notification.NotificationEvery"
    android:padding="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:textColor="#FFFFFF">
        <TextView
            android:layout_margin="16dp"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chức năng thông báo"
            android:textColor="#000000"/>

        <Spinner
            android:id="@+id/spnChuDeQuanTam"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="17dp"
            android:layout_marginRight="8dp"
            android:textColor="#000000"></Spinner>
        <EditText
            android:id="@+id/edtSoPhut"
            android:hint="Nhập số phút"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"/>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnStartNotify"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bật thông báo"
                android:textColor="#197272"
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/btnStopNotify"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tắt thông báo"
                android:textColor="#197272"
                android:textStyle="bold"
                />


        </LinearLayout>
    </LinearLayout>



</LinearLayout>